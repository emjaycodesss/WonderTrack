<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import io.github.palexdev.materialfx.controls.*?>


<BorderPane fx:id="appShellRoot"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.wondertrackxd.controller.AppShellController"
            prefHeight="800.0" prefWidth="1200.0"
            minWidth="1200.0" minHeight="800.0"
            style="-fx-background-color: FFF9ED; -fx-focus-color: transparent; -fx-faint-focus-color: transparent;"
            stylesheets="@../css/scroll-fix.css">

    <top>
        <fx:include source="Header.fxml" fx:id="header"/>
    </top>

    <left>
        <fx:include source="Sidebar.fxml" fx:id="sidebar"/>
    </left>

    <center>
        <StackPane fx:id="mainContent" style="-fx-background-color: FFF9ED;" />
    </center>

</BorderPane>
