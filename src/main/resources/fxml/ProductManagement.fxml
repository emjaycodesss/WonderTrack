<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="false" fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #FFFAEC; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-background-insets: 0; -fx-border-insets: 0; -fx-padding: 0;" styleClass="custom-scroll-pane" stylesheets="@../css/new-table-style.css, @../css/scroll-fix.css, @../css/form-fix.css" vbarPolicy="NEVER" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wondertrackxd.controller.products.ProductManagementController">
            <VBox minHeight="0.0" spacing="20.0" style="-fx-background-color: #FFFAEC; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-background-insets: 0; -fx-border-insets: 0;" styleClass="custom-vbox">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>

         <!-- Category Management Section -->
         <VBox spacing="15.0" style="-fx-background-color: fffefb; -fx-border-color: fde998; -fx-background-radius: 6; -fx-border-radius: 6;">
            <padding>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <Label text="Category Management" textFill="#92400d">
                  <font>
                     <Font name="Inter Extra Bold" size="20.0" />
                  </font>
               </Label>
            </HBox>

            <!-- Add Category Form -->
            <HBox alignment="CENTER" spacing="10.0">
               <TextField fx:id="categoryNameField" promptText="Enter Category Name" style="-fx-background-color: white; -fx-border-color: #ffe680; -fx-border-width: 1px; -fx-background-radius: 4px; -fx-border-radius: 4px; -fx-pref-height: 35;" HBox.hgrow="ALWAYS" />
               <Button fx:id="addCategoryButton" styleClass="action-button" text="Add Category" textFill="WHITE">
                  <font>
                     <Font name="Inter Medium" size="13.0" />
                  </font></Button>
            </HBox>

            <!-- Categories Table -->
            <TableView fx:id="categoriesTable" maxHeight="180.0" maxWidth="Infinity" minHeight="180.0" prefHeight="180.0" styleClass="recent-orders-table" stylesheets="@../css/new-table-style.css" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="categoryNameColumn" minWidth="200.0" prefWidth="300.0" text="Category Name" />
                  <TableColumn fx:id="categoryActionsColumn" minWidth="100.0" prefWidth="150.0" text="Actions" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <placeholder>
                  <Label text="No categories available" textFill="#8b4513" />
               </placeholder>
            </TableView>
            
            <!-- Category Pagination Controls -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="categoryPrevPageBtn" mnemonicParsing="false" style="-fx-background-color: fef7da; -fx-border-color: fdf1bb;" text="Previous">
                     <font>
                        <Font name="Inter Regular" size="13.0" />
                     </font></Button>
                  <Label fx:id="categoryPageLabel" text="Page 1 of 1" textFill="#b4540a" />
                  <Button fx:id="categoryNextPageBtn" mnemonicParsing="false" style="-fx-background-color: fef7da; -fx-border-color: fdf1bb;" text="Next">
                     <font>
                        <Font name="Inter Regular" size="13.0" />
                     </font></Button>
                  <Label fx:id="categoryResultsInfoLabel" text="Showing results" textFill="#b4540a" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Inter Regular" size="10.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </VBox>

         <!-- Product Management Section -->
         <VBox spacing="15.0" style="-fx-background-color: fffefb; -fx-border-color: fde998; -fx-background-radius: 6; -fx-border-radius: 6;">
            <padding>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <Label text="Flavor Management" textFill="#92400d">
                  <font>
                     <Font name="Inter Extra Bold" size="20.0" />
                  </font>
               </Label>
            </HBox>

            <!-- Add Product Form -->
            <VBox spacing="10.0">
               <ComboBox fx:id="productCategoryCombo" maxWidth="Infinity" promptText="Select category" style="-fx-background-color: #fef7da; -fx-border-color: #ffe680; -fx-border-width: 1px; -fx-border-radius: 4px; -fx-background-radius: 4px; -fx-pref-height: 35;" />
               <TextField fx:id="productNameField" promptText="Enter flavor name" style="-fx-background-color: white; -fx-border-color: #ffe680; -fx-border-width: 1px; -fx-background-radius: 4px; -fx-border-radius: 4px; -fx-pref-height: 35;" />
               <TextField fx:id="productDescriptionField" promptText="Enter flavor description" style="-fx-background-color: white; -fx-border-color: #ffe680; -fx-border-width: 1px; -fx-background-radius: 4px; -fx-border-radius: 4px; -fx-pref-height: 35;" />
               <HBox alignment="CENTER" spacing="10.0">
                  <TextField fx:id="productPriceField" prefWidth="150" promptText="Enter price (â‚±)" style="-fx-background-color: white; -fx-border-color: #ffe680; -fx-border-width: 1px; -fx-background-radius: 4px; -fx-border-radius: 4px; -fx-pref-height: 35;" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="addProductButton" styleClass="action-button" text="Add Flavor" textFill="WHITE">
                     <font>
                        <Font name="Inter Medium" size="13.0" />
                     </font></Button>
               </HBox>
            </VBox>

            <!-- Products Table -->
            <TableView fx:id="productsTable" maxHeight="180.0" maxWidth="Infinity" minHeight="180.0" prefHeight="180.0" styleClass="recent-orders-table" stylesheets="@../css/new-table-style.css" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="productCategoryColumn" minWidth="60.0" prefWidth="80.0" text="Category" />
                  <TableColumn fx:id="productNameColumn" minWidth="60.0" prefWidth="80.0" text="Flavor Name" />
                  <TableColumn fx:id="productDescriptionColumn" minWidth="160.0" prefWidth="200.0" text="Description" />
                  <TableColumn fx:id="productPriceColumn" minWidth="30.0" prefWidth="50.0" text="Price" />
                  <TableColumn fx:id="productActionsColumn" minWidth="30.0" prefWidth="50.0" text="Actions" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <placeholder>
                  <Label text="No flavors available" textFill="#8b4513" />
               </placeholder>
            </TableView>
            
            <!-- Product Pagination Controls -->
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="productPrevPageBtn" mnemonicParsing="false" style="-fx-background-color: fef7da; -fx-border-color: fdf1bb;" text="Previous" />
                  <Label fx:id="productPageLabel" text="Page 1 of 1" textFill="#b4540a" />
                  <Button fx:id="productNextPageBtn" mnemonicParsing="false" style="-fx-background-color: fef7da; -fx-border-color: fdf1bb;" text="Next" />
                  <Label fx:id="productResultsInfoLabel" text="Showing results" textFill="#b4540a" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="Inter Regular" size="10.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </VBox>
      </VBox>
</ScrollPane>
